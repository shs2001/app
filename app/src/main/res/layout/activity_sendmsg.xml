<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    android:weightSum="30"
    tools:context=".sendmsg">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Messege"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:layout_weight="1"
            ></TextView>

        <EditText
            android:id="@+id/phonenumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:hint="Phone Number"
            android:textColor="@color/black"
            android:textColorHint="#595757"
            android:inputType="number"
            android:layout_weight="1"
            android:maxLength="11"
            android:text="01646362559"
            >

        </EditText>

        <EditText
            android:id="@+id/messege"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:hint="Messege"
            android:textColor="@color/black"
            android:textColorHint="#595757"
            android:inputType="text"
            android:layout_weight="1"
            android:maxLength="160"
            android:text="demo"
            >

        </EditText>

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Messege"
            android:backgroundTint="#8FD865"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_weight="1"
            ></Button>


            <TextView
                android:id="@+id/balance"
                android:layout_width="85dp"
                android:layout_height="20dp"
                android:drawableLeft="@drawable/money"
                android:text="00.00 TK"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_weight="1"
                ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/result"></TextView>



</LinearLayout>